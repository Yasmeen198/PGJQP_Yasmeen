<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="com.bookpublishinghouseusingmappingfile.model.BookInfo" table="BOOKS">
        <id name="bookID" type="integer">
            <column name="BOOKID"  />
            <generator class="assigned" />
        </id>
        <property name="bookName" type="string">
            <column name="BOOKNAME" length="20" />
        </property>
        <property name="author" type="string">
            <column name="AUTHOR" length="20" />
        </property>
        <property name="edition" type="string">
            <column name="EDITION" length="10" />
        </property>
        <property name="category" type="string">
            <column name="CATEGORY" length="10" />
        </property>
        <property name="publisher" type="string">
            <column name="PUBLISHER" length="100" />
        </property>
        <property name="publishingYear" type="string">
            <column name="PUBLISHINGYEAR" length="10" />
        </property>
        <property name="price" type="double">
            <column name="PRICE" length="10" />
        </property>
        <property name="quantity" type="integer">
            <column name="QUANTITY" length="10" />
        </property>
    </class>
</hibernate-mapping>